<%= form_for @event, html: { multipart: true } do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :artist %>
    <%= form.text_field :artist, id: :event_artist %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, id: :event_description %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_select :event_date, id: :event_date %>
  </div>

  <div class="form-group">
    <%= form.label :image, "Image" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price_low %>
    <%= form.number_field :price_low, id: :event_price_low, in: 0..1000 %>
  </div>

  <div class="form-group">
    <%= form.label :price_high %>
    <%= form.number_field :price_high, id: :event_price_high, in: 0..1000 %>
  </div>

<div class="form-group">
  <%= form.label :for_adult do %>
    <%= form.check_box :for_adult %>
    Only for adults
  <% end %>
</div>

  </br>

  <div class="form-group">
    <%= form.label :size %>
    <%= form.number_field :size, id: :event_size, in: 0..50 %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

        <!--<input type="checkbox" aria-label="Only For Adult">-->
      <!--</span>-->
        <!--<input type="text" class="form-control" aria-label="Text input with checkbox">-->
      <!--</div>-->
  <!--</div>-->

  <div class="form-group row">
    <div class="col-lg-2">
      <%= form.label :for_children %><br>
    </div>
    <div class="col-lg-10">
      <%= form.check_box :for_children %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

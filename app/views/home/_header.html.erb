<!----start-header----------->
<div class="header_bg">
  <div class="wrap">
    <div class="header">
      <!--------start-logo------>
      <div class="logo">
        <%= link_to root_path do %>
          <%= image_tag('/assets/logo.png') %>
        <% end %>

      </div>
      <!--------end-logo--------->
      <!----start-nav-------->
      <div class="nav">
        <ul>
          <li><%= link_to 'Main Page', root_path %></li>
          <li><%= link_to 'Events', events_url %></li>

          <% if user_signed_in? %>
            <% if current_user.is_admin %>
              <li>
                <%= link_to 'Admin panel', rails_admin_path, class: "nav-link" %>
              </li>
            <% end %>
            <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
            <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
            <li><%= link_to 'Add Event', new_event_path %></li>
          <% else %>
            <li><%= link_to 'Log In', new_user_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <% end %>
          <div class="clear"> </div>
        </ul>
      </div>
      <!-----end-nav-------->
      <div class="clear"> </div>
    </div>
  </div>
</div>
<!------end-header------------>